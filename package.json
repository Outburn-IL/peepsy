{
  "name": "peepsy",
  "version": "1.0.0",
  "description": "A Node.js library for bidirectional, HTTP-like inter-process communication using promises",
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist/**/*"
  ],
  "scripts": {
    "build": "npm run clean && npm run generate-version && tsup",
    "prebuild": "npm run format:check && npm run lint",
    "generate-version": "node scripts/generate-version.js",
    "build:watch": "tsup --watch",
    "clean": "rimraf dist",
    "test": "jest",
    "pretest": "npm run format:check && npm run lint",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "prepublishOnly": "npm run format:check && npm run lint && npm run test && npm run build",
    "ci": "npm run format:check && npm run lint && npm test -s && npm run build",
    "release": "standard-version",
    "dev": "ts-node src/index.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Outburn-IL/peepsy.git"
  },
  "keywords": [
    "ipc",
    "inter-process-communication",
    "child-process",
    "promises",
    "nodejs",
    "worker",
    "communication",
    "concurrent",
    "sequential",
    "load-balancing"
  ],
  "author": "Outburn Ltd.",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Outburn-IL/peepsy/issues"
  },
  "homepage": "https://github.com/Outburn-IL/peepsy#readme",
  "engines": {
    "node": ">=16.0.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.19",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "jest": "^29.7.0",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.5",
    "standard-version": "^9.5.0",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "tsup": "^8.3.5",
    "typescript": "^5.3.3"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "<rootDir>/__tests__/setup.ts"
    ],
    "testMatch": [
      "**/__tests__/**/*.test.ts"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 75,
        "functions": 75,
        "lines": 75,
        "statements": 75
      }
    },
    "testTimeout": 30000,
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    }
  }
}